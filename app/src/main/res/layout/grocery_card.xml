<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    card_view:cardBackgroundColor="@color/lightGrey"
    card_view:cardCornerRadius="5dp"
    card_view:layout_constraintBottom_toBottomOf="@+id/removeButton"
    layout_constraintEnd_toEndOf="parent"
    layout_constraintStart_toStartOf="parent"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:focusable="true"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/grocery_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:maxLength="25"
            android:maxLines="1"
            android:text="0.00$"
            android:textColor="@android:color/background_dark"
            android:textSize="50sp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/grocery_supermarket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Supermarket"
            android:maxLines="1"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/grocery_amount" />

        <TextView
            android:id="@+id/grocery_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="12/12/2018"
            android:maxLines="1"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/grocery_supermarket" />


    </android.support.constraint.ConstraintLayout>





</android.support.v7.widget.CardView>